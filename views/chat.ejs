<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css" integrity="sha256-mmgLkCYLUQbXn0B1SRqzHar6dCnv9oZFPEC1g1cwlkk=" crossorigin="anonymous" />
  <link rel="stylesheet" href="/chat.css">
  <title>Zapper</title>
</head>
<body>
  <div class="chat-container">
    <header class="chat-header">
      <h1><i class="fas fa-smile"></i> Zapper</h1>
      <form action ="/logout?_method=DELETE" method="POST">
        <button type = "Submit"> Log Out</button>
      </form>
    </header>
    <main class="chat-main">
      <div class="chat-sidebar">
        <h3><i class="fas fa-comments"></i> Group Name:</h3>
        <div class="dropdown">
          <button class="dropbtn">Dropdown</button>
          <div class="dropdown-content">
            <!-- <a href="#">Noise Music</a>
            <a href="#">Hiphop</a>
            <a href="#">Electronic Music</a> -->
            <% for(var i = 0; i < data.groups.length; i ++) { %>
              <a href = "#"><%= data.groups[i] %></li></a>
            <% } %>
          </div>
        </div> 
        <h3><i class="fas fa-users"></i> Users</h3>
        <ul id="users">
          <!-- <li>Sniperzz</li>
          <li>Yunglean</li>
          <li>C$rtier</li>
          <li>1337</li>
          <li>s@dboy$</li> -->

          <% for(var i = 0; i < data.users.length; i ++) { %>
            <li><%= data.users[i] %></li>
          <% } %>
          <form action = "/register_group" method="POST">
            Create your own group<br>
            <input type="text" name="groupname"/><br>
            <input type="hidden" name="userId" value="<%= data.user._id %>">
            <input type="Submit" class="btn solid" value="Create Group">
          </form>
        </ul>
        
      </div>
      <div class="chat-messages">
      </div>
    </main>
    <div class="chat-form-container">
      <a href="/edit_profile">Edit Profile</a>
      <form id="chat-form">
        <input 
          id = "username"
          type = "hidden"
          value="<%= data.user.username %>"
        />
        <input
          id = "userid"
          type="hidden"
          value="<%= data.user._id %>"
        />
        <input
          id="msg"
          type="text"
          placeholder="Enter Message"
          autocomplete="off"
        />
        <button class="btn"><i class="fas fa-paper-plane"></i> Send</button>
      </form>
    </div>
  </div>
  <script src="/socket.io/socket.io.js"></script>
  <script src="/main.js"></script>
</body>
</html>